{
  "manifest_version": 3,
  "name": "Lancer Github Extension",
  "version": "0.2.0",
  "icons": {},
  "host_permissions": [
    "http://localhost:3000/*",
    "https://github.com/*"
  ],
  "action": {
    "default_title": "Lancer",
    "default_popup": "popup.html"
  },
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tabs",
    "system.display",
    "webNavigation"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "http://localhost:3000/*",
        "https://github.com/*"
      ],
      "js": [
        "content.js"
      ],
      "media": []
    }
  ]
}