{
  "name": "raffle-database",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "start": "node ./lib/index.js",
    "dev": "NODE_ENV=dev ts-node ./src/index.ts",
    "test": "NODE_ENV=test npx ts-mocha ./tests/*.spec.ts -p ./tsconfig.json",
    "prep-test-db": "NODE_ENV=test npm run migrate && NODE_ENV=test npx ts-node ./tests/prepTestDb.ts",
    "migrate": "ts-node ./src/db/migrate.ts",
    "lint": "eslint . --ext .ts",
    "format": "prettier --config .prettierrc 'src/**/*.ts' --write",
    "build": "tsc -p ."
  },
  "engines": {
    "node": "16.x.x"
  },
  "dependencies": {
    "@sentry/node": "^7.2.0",
    "@sentry/tracing": "^7.2.0",
    "@solana/web3.js": "1.66.2",
    "cors": "^2.8.5",
    "dayjs": "1.11.6",
    "dotenv": "^10.0.0",
    "express": "^4.17.2",
    "pg": "^8.7.1",
    "pg-promise": "^10.11.1"
  },
  "devDependencies": {
    "@types/bn.js": "^5.1.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "^16.11.8",
    "@types/pg": "^8.6.5",
    "@typescript-eslint/eslint-plugin": "^5.16.0",
    "@typescript-eslint/parser": "^5.16.0",
    "eslint": "^8.11.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "mocha": "^9.2.2",
    "prettier": "^2.6.0",
    "ts-mocha": "^9.0.2",
    "ts-node": "^10.5.0",
    "typescript": "^4.5.2"
  }
}
