{
  "manifest_version": 3,
  "name": "Lancer Github Extension",
  "version": "0.2.0",
  "icons": {},
  "host_permissions": [
    "http://localhost:3000/*",
    "https://github.com/*",
    "https://demo.lancer.so/*",
    "https://*.vercel.app/*"
  ],
  "externally_connectable": {
    "matches": ["http://localhost:3000/*",
    "https://*.vercel.app/*"]
  },
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tabs",
    "system.display",
    "webNavigation"
  ],

  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "http://localhost:3000/*",
        "https://github.com/*"
      ],
      "js": [
        "content.js"
      ],
      "media": []
    }
  ]
}